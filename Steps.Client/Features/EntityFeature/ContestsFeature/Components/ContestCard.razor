@using System.Diagnostics.Metrics
@using Steps.Shared.Contracts.Contests.ViewModels
@using Steps.Client.Features.EntityFeature.GroupBlocksFeature.Components
@using Steps.Client.Features.Common
@using Steps.Shared.Contracts.Accounts.ViewModels

@inherits ManageBaseComponent<Contest, ContestViewModel, CreateContestViewModel, UpdateContestViewModel>

<RadzenCard>
    <ChildContent>
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>

        <div class="grid grid-cols-3 gap-4">
            <div>
                <p><strong>Дата начала:</strong> @Model.StartDate.ToString("dd.MM.yyyy")</p>
                <p><strong>Дата окончания:</strong> @Model.EndDate.ToString("dd.MM.yyyy")</p>
                <p><strong>Статус:</strong> @Model.Status</p>
                <p><strong>Тип:</strong> @Model.Type</p>
            </div>

            <div>
                <h4>Судьи</h4>
                <RadzenDataList Items="@Judges" TItem="UserViewModel">
                    <Template Context="judge">
                        <p>@judge.Login</p>
                    </Template>
                </RadzenDataList>
            </div>

            <div>
                <h4>Счетчики</h4>
                <RadzenDataList Items="@Counters" TItem="UserViewModel">
                    <Template Context="counter">
                        <p>@counter.Login</p>
                    </Template>
                </RadzenDataList>
            </div>
        </div>
    </ChildContent>
</RadzenCard>

