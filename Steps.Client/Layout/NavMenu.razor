@using Microsoft.AspNetCore.Authorization
@using Steps.Domain.Base
@using Steps.Domain.Definitions
@using Steps.Client.Features.RoleFeature.UndefinedFeature
@using Steps.Client.Features.RoleFeature.OrganizerFeature
@using Steps.Client.Features.RoleFeature.CounterFeature
@using Steps.Client.Features.RoleFeature.JudjeFeature
@using Steps.Client.Features.RoleFeature.UserFeature
@attribute [Authorize]



@if (UserRole is Role.Undefined)
{
    <UndefinedNavMenu/>
}
else if (UserRole is Role.Organizer)
{
    <OrganizerNavMenu/>
}

else if (UserRole is Role.Counter)
{
    <CounterNavMenu/>
}

else if (UserRole is Role.Judge)
{
    <JudgeNavMenu/>
}

else if (UserRole is Role.User)
{
    <UserNavMenu/>
}


@code
{
    [CascadingParameter] public IUser? User { get; set; }
    private Role? UserRole => User?.Role;
}
