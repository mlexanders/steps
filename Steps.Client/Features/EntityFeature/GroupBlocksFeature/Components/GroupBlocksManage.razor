
@using Steps.Client.Features.EntityFeature.Schedules
@inherits Steps.Client.Features.Common.BaseNotificate



@if (_blocks is { Count: > 0 })
{
    <RadzenButton Text="Удалить блоки" Click="@OnDeleteBlocks"/>
    <RadzenTabs RenderMode="TabRenderMode.Client" >
        <Tabs>
            @foreach (var block in _blocks)
            {
                <RadzenTabsItem Text="@GetTittle(block)">
                    <ScheduleByGroupBlock GroupBlock="block" ></ScheduleByGroupBlock>
                </RadzenTabsItem>
            }
        </Tabs>
    </RadzenTabs>
}
else
{
    <RadzenText> блоков нет</RadzenText>
    <RadzenButton Text="Загрузить команды" Click="GetTeams"></RadzenButton>

    <RadzenText> Выберите очередность выступления команд</RadzenText>

    if (_teams is not null)
    {

        foreach (var team in _teams)
        {
            <RadzenCard>
                <RadzenText> @team.Name </RadzenText>
            </RadzenCard>
        }
    }
    
    <RadzenButton Text="Создать блоки" Click="@CreateBlocks"></RadzenButton>

}