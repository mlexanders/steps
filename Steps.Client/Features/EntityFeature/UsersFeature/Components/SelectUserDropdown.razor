@using Steps.Client.Features.EntityFeature.UsersFeature.Services
@using Steps.Domain.Definitions
@using Steps.Shared
@using Steps.Shared.Contracts.Accounts.ViewModels

@implements IDisposable
<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center"
             Gap="0.5rem" class="rz-p-12">
    <RadzenLabel Text="Select Value" Component="DropDownDataGridFilteringLoadData"/>

    <RadzenDropDownDataGrid @bind-Value="@UserId" Data="@UsersManagerEntityManager.Data" Change="@((o) => OnChange(o))"
                            TextProperty="@nameof(UserViewModel.Login)" ValueProperty="@nameof(UserViewModel.Id)"
                            Name="DropDownDataGridTextValueProperties" IsLoading="@UsersManagerEntityManager.IsLoading"/>
</RadzenStack>

@code
{
    [Inject] protected UsersManager UsersManagerEntityManager { get; set; } = null!;

    [Parameter] public Guid UserId { get; set; } 
    
    [Parameter] public Role? Role { get; set; }

    [Parameter] public EventCallback<Guid> UserIdChanged { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var roleSpec = GetBaseSpecification();
        UsersManagerEntityManager.UseSpecification(roleSpec);
        
        UsersManagerEntityManager.ChangedList += StateHasChanged;
        await UsersManagerEntityManager.Initialize();
    }

    private Specification<User> GetBaseSpecification()
    {
        try
        {
            var spec = Specification.Users;
            return Role is null ?  spec : spec.Where(u => u.Role == Role);
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            throw;
        }
    }

    private async Task LoadData(LoadDataArgs arg)
    {
        var baseSpec = GetBaseSpecification();

        if (!string.IsNullOrEmpty(arg.Filter))
        {
            var filter = arg.Filter.ToLower();
            var combinedSpec =  baseSpec.AddPredicate(u => u.Login.Contains(filter));
            UsersManagerEntityManager.UseSpecification(combinedSpec);
        }
        else
        {
            UsersManagerEntityManager.UseSpecification(baseSpec);
        }

        await UsersManagerEntityManager.ChangePage(arg.Skip, arg.Top);
    }

    private async Task OnChange(object? userId)
    {
        if (UserIdChanged.HasDelegate)
            await UserIdChanged.InvokeAsync(UserId);
    }

    public void Dispose()
    {
        UsersManagerEntityManager.ChangedList -= StateHasChanged;
    }
}
