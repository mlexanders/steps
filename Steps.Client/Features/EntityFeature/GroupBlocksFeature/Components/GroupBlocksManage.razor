@using Steps.Domain.Entities.GroupBlocks;
@using Steps.Shared.Contracts.Schedules.ViewModels;

@inherits ManageBaseComponent<GroupBlock, GroupBlockViewModel,CreateGroupBlockViewModel, UpdateGroupBlockViewModel>

<RadzenCard>
    <RadzenDataGrid TItem="GroupBlockViewModel" Data="Manager.Data" AllowPaging="true"
                    PageSize="Manager.PageSize" EmptyText="Мероприятия еще не созданы"
                    IsLoading="@Manager.IsLoading" Count="@Manager.TotalCount"
                    LoadData="@OnChangePage">

        <HeaderTemplate>
            <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="add_circle" Text="Создать мероприятие"
                          Click="@OnCreate"/>
        </HeaderTemplate>

        <Columns>
            <RadzenDataGridColumn TItem="GroupBlockViewModel" Property="@nameof(GroupBlockViewModel.ContestId)" Title="ContestId"/>
            <RadzenDataGridColumn TItem="GroupBlockViewModel" Property="@nameof(GroupBlockViewModel.StartTime)" Title="Дата начала"/>
            <RadzenDataGridColumn TItem="GroupBlockViewModel" Property="@nameof(GroupBlockViewModel.EndTime)" Title="Дата окончания"/>

            <RadzenDataGridColumn Width="16%" Context="block" Filterable="false" Sortable="false"
                                  TextAlign="TextAlign.Right" Frozen="true" FrozenPosition="FrozenColumnPosition.Right">
                <Template Context="block">
                    <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat"
                                  Size="ButtonSize.Medium" class="rz-my-1 rz-ms-1"
                                  Click="@(() => OnUpdate(block))" @onclick:stopPropagation="true"/>

                    <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Flat"
                                  Size="ButtonSize.Medium" Shade="Shade.Lighter" class="rz-my-1 rz-ms-1"
                                  Click="@(() => OnDelete(block))" @onclick:stopPropagation="true"/>
                </Template>
            </RadzenDataGridColumn>

        </Columns>
    </RadzenDataGrid>
</RadzenCard>