<CascadingAuthenticationState>
    <UserState>
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(AuthorizedLayout)">
                    <Authorizing>
                        Authorizing...
                    </Authorizing>

                    @* Access is denied by the [Authorize] attribute *@
                    <NotAuthorized >
                        Access is denied
                    </NotAuthorized>

                </AuthorizeRouteView>
                <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(EmptyLayout)">
                    <RadzenRow>
                        <RadzenColumn Size="12" style="margin-top: 5rem; margin-bottom: 5rem">
                            <RadzenText Text="Страница не найдена" TextStyle="TextStyle.DisplayH1" style="margin: 0; margin-bottom: 2rem" TextAlign="TextAlign.Center"/>
                            <RadzenText Text="Извините, но здесь ничего нет!" TextStyle="TextStyle.H6" style="margin: 0" TextAlign="TextAlign.Center" TagName="TagName.P"/>
                        </RadzenColumn>
                    </RadzenRow>
                </LayoutView>
            </NotFound>
        </Router>
    </UserState>
</CascadingAuthenticationState>
