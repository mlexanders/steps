@using Steps.Shared.Contracts.Contests.ViewModels

@inherits ManageBaseComponent<Contest, ContestViewModel, CreateContestViewModel, UpdateContestViewModel>

<RadzenCard>
    <RadzenDataGrid TItem="ContestViewModel" Data="Manager.Data" AllowPaging="true"
                    PageSize="Manager.PageSize" EmptyText="Мероприятия еще не созданы"
                    IsLoading="@Manager.IsLoading" Count="@Manager.TotalCount"
                    LoadData="@OnChangePage">

        <HeaderTemplate>
            <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="add_circle" Text="Создать мероприятие"
                          Click="@OnCreate"/>
        </HeaderTemplate>

        <Columns>
            <RadzenDataGridColumn TItem="ContestViewModel" Property="Name" Title="Название"/>
            <RadzenDataGridColumn TItem="ContestViewModel" Property="StartDate" Title="Дата начала"/>
            <RadzenDataGridColumn TItem="ContestViewModel" Property="EndDate" Title="Дата окончания"/>

            <RadzenDataGridColumn Width="16%" Context="contest" Filterable="false" Sortable="false"
                                  TextAlign="TextAlign.Right" Frozen="true" FrozenPosition="FrozenColumnPosition.Right">
                <Template Context="order">
                    <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat"
                                  Size="ButtonSize.Medium" class="rz-my-1 rz-ms-1"
                                  Click="@(() => OnUpdate(order))" @onclick:stopPropagation="true"/>

                    <RadzenButton Icon="delete" ButtonStyle="ButtonStyle.Danger" Variant="Variant.Flat"
                                  Size="ButtonSize.Medium" Shade="Shade.Lighter" class="rz-my-1 rz-ms-1"
                                  Click="@(() => OnDelete(order))" @onclick:stopPropagation="true"/>
                </Template>
            </RadzenDataGridColumn>

        </Columns>
    </RadzenDataGrid>
</RadzenCard>