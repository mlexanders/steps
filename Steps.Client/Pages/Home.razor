@page "/"
@using Microsoft.AspNetCore.Authorization
@using Steps.Domain.Base
@using Steps.Domain.Definitions
@using Steps.Client.Features.Organizer.Pages
@using Steps.Client.Features.RoleFeature.Undefined.Pages
@using Steps.Client.Features.RoleFeature.Counter.Pages
@using Steps.Client.Features.RoleFeature.Judje.Pages
@using Steps.Client.Features.RoleFeature.UserFeature.Pages
@attribute [Authorize]



@if (UserRole is Role.Undefined)
{
    <UndefinedHome/>
}
else if (UserRole is Role.Organizer)
{
    <OrganizerHome/>
}

else if (UserRole is Role.Counter)
{
    <CounterHome/>
}

else if (UserRole is Role.Judje)
{
    <JudjeHome/>
}

else if (UserRole is Role.User)
{
    <UserHome/>
}


@code
{
    [CascadingParameter] public IUser? User { get; set; }
    private Role? UserRole => User?.Role;
}
